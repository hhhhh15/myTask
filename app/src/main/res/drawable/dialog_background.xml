<!-- res/drawable/dialog_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 背景颜色 -->
    <solid android:color="#FFFFFF"/>

    <!-- 圆角 -->
    <corners android:radius="10dp"/>

    <!-- 边框 -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- 可选：内边距（不会影响实际布局） -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
